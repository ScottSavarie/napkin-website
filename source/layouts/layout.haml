  %head
    %script{:src => "js/modules/modernizr.custom.js"}
    %meta{:charset => "utf-8"}
    / Use title if it's in the page YAML frontmatter
    %title= data.page.title
    %meta{:name => "description", :content => data.page.description}
    %meta{:content => "width=device-width", :name => "viewport"}
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}
    %meta{:content => "yes", :name => "apple-touch-fullscreen"}


    / Google
    %meta{:name =>"description", :content=> "Napkin lets you design quick mockups directly on your iPhone." }
    %meta{:name =>"keywords", :content=> "design, app, mockups, user, interface, tool" }
    %meta{:name =>"author", :content=> "Napkin" }
    %meta{:name =>"copyright", :content=> "Napkin 2015" }
    %meta{:name =>"application-name", :content=> "Napkin" }

    / Facebook          
    %meta{:property => "og:title", :content => "Napkin for iPhone" }
    %meta{:property => "og:type", :content => "website" }
    %meta{:property => "og:image", :content => "img/share.jpg" }
    %meta{:property => "og:url", :content => "http://www.designwithnapkin.com" }
    %meta{:property => "og:description", :content => "Napkin lets you design quick mockups directly on your iPhone." }

    / Twitter         
    %meta{:name => "twitter:card", :content=> "summary" }
    %meta{:name => "twitter:title", :content=> "Napkin for iPhone" }
    %meta{:name => "twitter:description", :content=> "Napkin lets you design quick mockups directly on your iPhone." }
    %meta{:name => "twitter:image", :content=> "img/share.jpg" }



    / Place favicon.ico and apple-touch-icon.png in the root directory
    %link{:href => "css/style.css", :rel => "stylesheet"}
